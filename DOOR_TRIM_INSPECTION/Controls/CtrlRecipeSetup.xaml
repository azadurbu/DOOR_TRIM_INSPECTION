<UserControl x:Class="DOOR_TRIM_INSPECTION.Controls.CtrlRecipeSetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:DOOR_TRIM_INSPECTION.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent">
        <TabControl x:Name="tabControlRecipe" Margin="0 -20 0 0" BorderThickness="0" Background="Transparent">
            <TabControl.Resources>
                <Style TargetType="TabPanel">
                    <Setter Property="Visibility" Value="Hidden"/>
                </Style>
            </TabControl.Resources>
            <TabItem x:Name="tabRecipeList" Header="RecipeList" Background="Transparent">
                <Controls:CtrlRecipeList x:Name="ctrlRecipeList" Background="Transparent"></Controls:CtrlRecipeList>         
            </TabItem>
            <TabItem x:Name="tabRecipeWizard" Header="Recipe Wizard" Background="Transparent">
                <Controls:CtrlRecipeWizard x:Name="ctrlRecipeWizard" Background="Transparent"></Controls:CtrlRecipeWizard>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
