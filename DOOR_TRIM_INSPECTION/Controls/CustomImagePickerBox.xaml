<Window x:Class="DOOR_TRIM_INSPECTION.Controls.CustomImagePickerBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Controls"
        mc:Ignorable="d"
        Title="{DynamicResource TXT_SELECT_IMAGE}" Height="600" Width="800" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblDoorTrimID" FontWeight="Bold" Grid.Column="0" Margin="5" Content="{StaticResource TXT_DOOR_TRIM_ID}"></Label>
            <TextBox Name="txtDoorTrimID" Grid.Column="1" Margin="5" Text="" TextChanged="TxtDoorTrimID_TextChanged" Grid.ColumnSpan="2"></TextBox>
            <Label Grid.Column="3" Margin="5" HorizontalContentAlignment="Center">OR</Label>
            <Button Name="btnSelectImage" Grid.Column="4" Margin="5" Content="{StaticResource TXT_SELECT_IMAGE}" Click="BtnSelectImage_Click"></Button>
        </Grid>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>            </Grid.ColumnDefinitions>
            <Label Name="lblImageType" FontWeight="Bold" Grid.Column="0" Margin="5" Content="{StaticResource TXT_DOOR_SIDE}"></Label>
            <RadioButton Name="rdoFront" Grid.Column="1" Margin="5" Content="{StaticResource TXT_FRONT_VIEW}" />
            <RadioButton Name="rdoRear" Grid.Column="2" Margin="5" Content="{StaticResource TXT_REAR_VIEW}" IsChecked="True" />
        </Grid>
        <Grid VerticalAlignment="Stretch" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".7*"/>
            </Grid.ColumnDefinitions>
            <ListBox Name="lstDoorTrims" Grid.Column="0" Margin="5" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="LstDoorTrims_SelectionChanged"></ListBox>
            <Image x:Name="imgPreview" Grid.Column="1" Margin="5" Stretch="Fill" />
        </Grid>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
                <ColumnDefinition Width=".20*"/>
            </Grid.ColumnDefinitions>
            <Button Name="btnPickImage" Grid.Column="4" Margin="5" Content="{StaticResource TXT_SELECT}" Click="BtnPickImage_Click"></Button>
        </Grid>
    </Grid>
</Window>
