<UserControl x:Class="DOOR_TRIM_INSPECTION.Controls.ROIImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Controls"
             xmlns:cls ="clr-namespace:DOOR_TRIM_INSPECTION.Class"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer Name="sv" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
            <cls:ZoomBorder x:Name="zoomBorder" ClipToBounds="True" Background="Gray" >
                <Canvas Name="zbImgCanvas" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Image Name="img" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Canvas>
            </cls:ZoomBorder>
        </ScrollViewer>
        <Border Panel.ZIndex="1000"  
                    HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Click="BtnDraw_Click" Name="btnDraw" Content="+" Width="20"/>
        </Border>

    </Grid>

</UserControl>
