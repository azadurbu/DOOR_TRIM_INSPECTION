<UserControl x:Class="DOOR_TRIM_INSPECTION.Controls.CtrlRecipeList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:DOOR_TRIM_INSPECTION.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Margin="20">
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".7*"/>
                <ColumnDefinition Width=".3*"/>
            </Grid.ColumnDefinitions>
            <Label FontSize="16" FontWeight="Bold" Content="{DynamicResource TXT_RECIPE_BUILDER}" Grid.Row="0" Grid.Column="0"></Label>
            <Button Grid.Row="0" Grid.Column="1" Name="btnAdd" Margin="5" FontSize="18" FontWeight="Bold" Background="#B3C8CF" Content="{DynamicResource TXT_ADD}" HorizontalAlignment="Right" Width="150" Click="BtnAdd_Click"></Button>
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                <DataGrid 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top" 
                    Name="dgRecipes"
                    CanUserAddRows="False"
                    AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" 
                            Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource TXT_RECIPE_NUM}" Binding="{Binding RecipeID}" Width=".05*"/>
                        <DataGridTextColumn Header="{DynamicResource TXT_RECIPE_NAME}" Binding="{Binding RecipeName}" Width=".15*" />
                        <DataGridTextColumn Header="{DynamicResource TXT_MODEL}" Binding="{Binding Model}" Width=".05*" />
                        <DataGridTextColumn Header="{DynamicResource TXT_YEAR}" Binding="{Binding Year}" Width=".05*" />
                        <DataGridTextColumn Header="{DynamicResource TXT_DOOR_TYPE}" Binding="{Binding DoorType}" Width=".1*" />
                        <DataGridTextColumn Header="{DynamicResource TXT_FRONT_IMAGE_PATH}" Binding="{Binding FrontImagePath}" Width=".2*" />
                        <DataGridTextColumn Header="{DynamicResource TXT_REAR_IMAGE_PATH}" Binding="{Binding RearImagePath}" Width=".2*" />
                        <DataGridTemplateColumn Header="{DynamicResource TXT_ACTIONS}" Width=".15*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Name="btnEdit" Width="50" Content="{DynamicResource TXT_EDIT}" CommandParameter="{Binding}" Margin="5 0" Click="BtnEdit_Click"/>
                                        <Button Name="btnCopy" Width="50" Content="{DynamicResource TXT_COPY}" CommandParameter="{Binding}" Margin="5 0" Click="BtnCopy_Click" Visibility="Collapsed"/>
                                        <Button Name="btnDelete" Width="50" Content="{DynamicResource TXT_DELETE}" CommandParameter="{Binding}" Margin="5 0" Click="BtnDelete_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
