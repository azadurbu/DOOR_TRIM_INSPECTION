<UserControl x:Class="DOOR_TRIM_INSPECTION.Controls.ImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Controls"
             xmlns:cls="clr-namespace:DOOR_TRIM_INSPECTION.Class"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Visibility="Visible" Name="rear_view">
            <ScrollViewer Name="sv_r" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                <cls:ZoomBorder x:Name="zoomBorder" ClipToBounds="True" Background="Gray" >
                    <Canvas Name="DrawingCanvasRear" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Image Name="imgRear" />
                    </Canvas>
                </cls:ZoomBorder>
            </ScrollViewer>
            <Border x:Name="borderFront" ClipToBounds="False" Margin="20" Panel.ZIndex="1000"  
                    Height="198" Width="237"  HorizontalAlignment="Right" VerticalAlignment="Top"
                    BorderBrush="GreenYellow" BorderThickness="5" Background="White" MouseDown="imgFront_MouseDown">
                <Canvas Name="DrawingCanvasFront" Background="White">
                    <Image Name="imgFront"/>
                </Canvas>
            </Border>
        </Grid>
    </Grid>
</UserControl>
