<UserControl x:Class="DOOR_TRIM_INSPECTION.Controls.FormControls.CtrlListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MaxHeight="40" Height="40" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width=".5*"/>
        </Grid.ColumnDefinitions>
        <Label FontWeight="Bold" Name="lblItemText" Grid.Column="0" Margin="5" Content=""></Label>
        <ListBox Name="lstItemValue" Grid.Column="1" Margin="5"></ListBox>
    </Grid>
</UserControl>
