<UserControl x:Class="DOOR_TRIM_INSPECTION.Controls.FormControls.PopUpROISetupTRY"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Controls.FormControls"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="480">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="330"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="6">
            <StackPanel Orientation="Vertical" Name="stkParameters" Margin="2"></StackPanel>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="6">
            <StackPanel Orientation="Vertical" Name="btn" Margin="1"  Grid.Column="1">
                <Button Margin="1" Name="btnTry" Style="{StaticResource RecipeControlButtonS}" Content="Try" Width="120" Click="BtnCancel_Click"/>

                <TextBlock Text="OK" FontSize="24" FontWeight="Bold" Foreground="White" 
                   Background="Orange" Width="120" TextAlignment="Center" TextWrapping="Wrap"
                   Padding="0 20"/>
                
                <Button Margin="1" Name="btnUpdate" Style="{StaticResource RecipeControlButtonS}" Content="Update Parameters" Width="120"/>
                <Button Margin="1" Name="btnCancel" Style="{StaticResource RecipeControlButtonS}" Content="Cancel" Width="120" Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
        <Grid  Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="Master" FontSize="24" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Image Name="imgMaster"/>
            </Grid>
        </Grid>
        <Grid  Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="Try Image 1" FontSize="24" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Image Name="imgTry1" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                
            </Grid>
        </Grid>
        <Grid  Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="Try Image 2" FontSize="24" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Image Name="imgTry2" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
        <Grid  Grid.Row="1" Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="Try Image 3" FontSize="24" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Image Name="imgTry3" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
        <Grid  Grid.Row="1" Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="Try Image 4" FontSize="24" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Image Name="imgTry4" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
