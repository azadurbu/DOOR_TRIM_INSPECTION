<UserControl x:Class="DOOR_TRIM_INSPECTION.Controls.FormControls.PopupROISetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Controls.FormControls"
             mc:Ignorable="d" 
               d:DesignWidth="330">
    <Grid>
        <StackPanel Background="LightGray" VerticalAlignment="Top" Orientation="Vertical" Grid.RowSpan="2">

            <Grid MaxHeight="40" Height="40" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width=".7*"/>
                </Grid.ColumnDefinitions>
                <Label FontWeight="Bold" Grid.Column="0" Margin="5" Content="{DynamicResource TXT_DETECTION_CLASS}"></Label>
                <ComboBox Name="cboDetectionClass" Grid.Column="1" Margin="5" Height="Auto" SelectionChanged="CboDetectionClass_SelectionChanged"></ComboBox>
            </Grid>
            <Grid MaxHeight="65" Height="65" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width=".7*"/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <Label FontWeight="Bold" Grid.Column="0"  Margin="5" Content="{DynamicResource TXT_ROI_NAME}" VerticalAlignment="Center"/>
                </Grid>
                <Grid  Grid.Column="1" Width="160" Name="gridTextPosition">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="15"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="txtROIName" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3" Margin="5" Text="" Focusable="True" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextChanged="TxtROIName_TextChanged"></TextBox>
                    <Rectangle Cursor="Hand" Grid.Column="0" Grid.Row="0" MouseDown ="TextPositionCorner" Name="TL" Stroke="Black"  StrokeThickness="1" Fill="Black"/>
                    <Rectangle Cursor="Hand" Grid.Column="4" Grid.Row="0" MouseDown ="TextPositionCorner" Name="TR" Stroke="Black"  StrokeThickness="1" Fill="Transparent"/>
                    <Rectangle Cursor="Hand" Grid.Column="0" Grid.Row="4" MouseDown ="TextPositionCorner" Name="BL" Stroke="Black"  StrokeThickness="1" Fill="Transparent"/>
                    <Rectangle Cursor="Hand" Grid.Column="4" Grid.Row="4" MouseDown ="TextPositionCorner" Name="BR" Stroke="Black"  StrokeThickness="1" Fill="Transparent"/>

                    <Rectangle Cursor="Hand" Grid.Column="2" Grid.Row="0" MouseDown ="TextPositionMiddle" Name="T"  Stroke="Black"  StrokeThickness="1" Fill="Black"/>
                    <Rectangle Cursor="Hand" Grid.Column="0" Grid.Row="2" MouseDown ="TextPositionMiddle" Name="L"  Stroke="Black"  StrokeThickness="1" Fill="Transparent"/>
                    <Rectangle Cursor="Hand" Grid.Column="4" Grid.Row="2" MouseDown ="TextPositionMiddle" Name="R"  Stroke="Black"  StrokeThickness="1" Fill="Transparent"/>
                    <Rectangle Cursor="Hand" Grid.Column="2" Grid.Row="4" MouseDown ="TextPositionMiddle" Name="B"  Stroke="Black"  StrokeThickness="1" Fill="Transparent"/>
                </Grid>

            </Grid>
            <StackPanel Orientation="Vertical" Name="stkParameters"></StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".5*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Name="buttonSave" Content="{DynamicResource TXT_SAVE}" Width="120" Height="25" Margin="5" Click="SaveButton_Click"/>
                <Button Grid.Column="1" Name="buttonCancel" Content="{DynamicResource TXT_CANCEL}" Width="120" Height="25" Margin="5" Click="CancelButton_Click"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".5*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Name="buttonDelete" Content="{DynamicResource TXT_DELETE}" Width="120" Height="25" Margin="5" Click="DeleteButton_Click"/>
                <Button Grid.Column="1" Name="buttonTry" Content="{DynamicResource TXT_TRY}" Width="120" Height="25" Margin="5" Click="TryButton_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
