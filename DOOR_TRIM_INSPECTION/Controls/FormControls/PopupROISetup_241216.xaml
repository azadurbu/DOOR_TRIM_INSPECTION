<UserControl x:Class="DOOR_TRIM_INSPECTION.Controls.FormControls.PopupROISetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Controls.FormControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <StackPanel Background="LightGray" Margin="5" VerticalAlignment="Top" Orientation="Vertical" Width="300">

            <Grid MaxHeight="40" Height="40" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".5*"/>
                </Grid.ColumnDefinitions>
                <Label FontWeight="Bold" Grid.Column="0" Margin="5" Content="{DynamicResource TXT_DETECTION_CLASS}"></Label>
                <ComboBox Name="cboDetectionClass" Grid.Column="1" Margin="5" Height="Auto" SelectionChanged="CboDetectionClass_SelectionChanged"></ComboBox>
            </Grid>
            <Grid MaxHeight="40" Height="40" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".5*"/>
                </Grid.ColumnDefinitions>
                <Label FontWeight="Bold" Grid.Column="0" Margin="5" Content="{DynamicResource TXT_ROI_NAME}"></Label>
                <TextBox Name="txtROIName" Grid.Column="1" Margin="5" Text="" Focusable="True"></TextBox>
            </Grid>
            <StackPanel Orientation="Vertical" Name="stkParameters">
            </StackPanel>

            <!-- Save Button -->
            <Button Name="button" Content="{DynamicResource TXT_SAVE}" Width="140" Height="30" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
