<UserControl x:Class="DOOR_TRIM_INSPECTION.Controls.FormControls.PopUpInputRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Controls.FormControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!--TEXTBOX-->
            <RowDefinition Height="Auto" /> <!--COLOR SLIDER-->
            <RowDefinition Height="Auto" /> <!--NUMERIC UPDOWN-->
            <RowDefinition Height="Auto" /> <!--COMBO BOX-->
            <RowDefinition Height="Auto" /> <!--COLOR PICKER-->
            <RowDefinition Height="Auto" /> <!--IMAGE UPLOADER-->
            <RowDefinition Height="Auto" /> <!--IMAGE COLOR PICKER-->
            <RowDefinition Height="Auto" /> <!--ACCURACY SLIDER-->
            <RowDefinition Height="Auto" /> <!--ACCURACY SLIDER-->
            <RowDefinition Height="Auto" /> <!--PlugDistance SLIDER-->
            <RowDefinition Height="Auto" /> <!--CogPlugDistance -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="0" Visibility="Collapsed" Name="gridTxt">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblText" FontWeight="Bold" Grid.Column="0" Margin="5"></Label>
            <TextBox Name="txtText" Grid.Column="1" Margin="5" Text=""></TextBox>
        </Grid>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="1" Visibility="Collapsed" Name="gridColorSlider">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".4*"/>
                <ColumnDefinition Width=".1*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblColorSlider" FontWeight="Bold" Grid.Column="0" Margin="5"></Label>
            <Slider Name="sliderColor" Grid.Column="1" Margin="5" Minimum="0" Maximum="255" ValueChanged="SliderColor_ValueChanged" TickFrequency="1" IsSnapToTickEnabled="True"></Slider>
            <TextBox Name="txtColorSlider" Grid.Column="2" Margin="5" Text="" PreviewTextInput="NumericTxt_PreviewTextInput" TextChanged="TxtColorSlider_TextChanged"></TextBox>
        </Grid>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="2" Visibility="Collapsed" Name="gridNumUpDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".1*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblNumUpDown" Grid.Column="0" FontWeight="Bold" Margin="5"></Label>
            <RepeatButton Name="btnDown" Grid.Column="1" Content="-" Width="Auto" Height="Auto" Margin="5" Click="BtnDown_Click" />
            <TextBox Name="txtNumUpDown" Grid.Column="2" Margin="5" Text="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" KeyDown="txtNumUpDown_KeyDown" ></TextBox>
            <RepeatButton Name="btnUp" Grid.Column="3" Content="+" Width="Auto" Height="Auto" Margin="5" Click="BtnUp_Click"/>
        </Grid>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="3" Visibility="Collapsed" Name="gridCombo">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblCombo" FontWeight="Bold" Grid.Column="0" Margin="5"></Label>
            <ComboBox Name="cmbCombo" Grid.Column="1" Margin="5" Height="Auto"></ComboBox>
        </Grid>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="4" Visibility="Collapsed" Name="gridColorPicker">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".2*"/>
                <ColumnDefinition Width=".2*"/>
                <ColumnDefinition Width=".1*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblColorPicker" FontWeight="Bold" Grid.Column="0" Margin="5"></Label>
            <Rectangle Name="rectColorPicker" Margin="5" Grid.Column="1" Fill="Black" Stroke="Black" StrokeThickness="3" />
            <TextBox Name="txtColorPicker" Grid.Column="2" Margin="5" Text="" TextChanged="TxtColorPicker_TextChanged" PreviewTextInput="TxtColorPicker_PreviewTextInput" ></TextBox>
            <Button Name="btnColorPicker" Grid.Column="3" Margin="5" Content="{StaticResource TXT_SELECT}" Click="BtnColorPicker_Click"></Button>
        </Grid>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="5" Visibility="Collapsed" Name="gridImageColorPicker">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".2*"/>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".2*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblImageColorPicker" FontWeight="Bold" Grid.Column="0" Margin="5"></Label>
            <Rectangle Name="rectImageColorPicker" Grid.Column="1" Margin="5" Fill="Red" Stroke="Black" StrokeThickness="3" />
            <TextBox Name="txtImageColorPicker" Grid.Column="2" Margin="5" Text=""  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextChanged="TxtColorPicker_TextChanged" PreviewTextInput="TxtColorPicker_PreviewTextInput"></TextBox>
            <Button Name="btnImageColorPicker" Grid.Column="3" Margin="5" Content="{StaticResource TXT_SELECT}" Click="BtnImageColorPicker_Click"></Button>
        </Grid>

        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="6" Visibility="Collapsed" Name="gridImageSelection">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".4*"/>
                <ColumnDefinition Width=".1*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblImageSelection" FontWeight="Bold" Grid.Column="0" Margin="5" ></Label>
            <TextBox Name="txtImageSelection" Grid.Column="1" Margin="5" Text=""></TextBox>
            <Button Name="btnImageSelection" Grid.Column="2" Content="{StaticResource TXT_SELECT}" Style="{StaticResource SettingFolderSelectButton}" Click="BtnImageSelection_Click"></Button>
            
        </Grid>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="7" Visibility="Collapsed" Name="gridAccuSlider">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".4*"/>
                <ColumnDefinition Width=".1*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblAccuSlider" FontWeight="Bold" Grid.Column="0" Margin="5"></Label>
            <Slider Name="sliderAccu" Grid.Column="1" Margin="5" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="SliderAccu_ValueChanged"></Slider>
            <TextBox Name="txtAccuSlider" Grid.Column="2" Margin="5" Text="" PreviewTextInput="NumericTxt_PreviewTextInput" TextChanged="TxtAccuSlider_TextChanged"></TextBox>
        </Grid>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="2" Visibility="Collapsed" Name="gridPlugDistance">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".2*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblPlugDistance" Grid.Column="0" FontWeight="Bold" Margin="5"  Content="{StaticResource TXT_DISTANCE}"></Label>
            <TextBox Name="txtPlugDistance" Grid.Column="1" Margin="5" Text="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True"></TextBox>
            <Button Name="btnGetDistance" Grid.Column="2" Content="{StaticResource TXT_CALCULATE}" Style="{StaticResource SettingFolderSelectButton}" Click="btnGetDistance_Click"></Button>
        </Grid>
        <Grid MaxHeight="80" Height="80" VerticalAlignment="Center" Grid.Row="2" Visibility="Collapsed" Name="gridPlugAlternateROI">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".2*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblPlugROI" Grid.Column="0" FontWeight="Bold" Margin="5"  Content="{StaticResource TXT_ROI}" Grid.Row="0"></Label>
            <TextBox Name="txtPlugAlternateROI" Grid.Column="1" Margin="5" Text="" Grid.Row="0"></TextBox>
            <Button Name="btnROISelection" Grid.Column="2" Content="{StaticResource TXT_SELECT}" Style="{StaticResource SettingFolderSelectButton}" Click="BtnROISelection_Click" Grid.Row="0"></Button>
            <TextBox Name="txtAlternateROIImage" IsReadOnly="True"  Grid.Column="1" Grid.ColumnSpan="2"  Margin="5" Text="" Grid.Row="1"></TextBox>
        </Grid>
        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="6" Visibility="Collapsed" Name="gridVppSelection">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".4*"/>
                <ColumnDefinition Width=".1*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblVppSelection" FontWeight="Bold" Grid.Column="0" Margin="5" ></Label>
            <TextBox Name="txtVppSelection" Grid.Column="1" Margin="5" Text=""></TextBox>
            <Button Name="btnVppSelection" Grid.Column="2" Content="{StaticResource TXT_SELECT}" Style="{StaticResource SettingFolderSelectButton}" Click="BtnVppSelection_Click"></Button>

        </Grid>

        <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="2" Visibility="Collapsed" Name="gridCogPlugDistance">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".2*"/>
            </Grid.ColumnDefinitions>
            <Label Name="lblCogPlugDistance" Grid.Column="0" FontWeight="Bold" Margin="5"  Content="{StaticResource TXT_DISTANCE}"/>
            <TextBox Name="txtCogPlugDistance" Grid.Column="1" Margin="5" Text="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True"/>
            <Button Name="btnGetCogDistance" Grid.Column="2" Content="{StaticResource TXT_CALCULATE}" Style="{StaticResource SettingFolderSelectButton}" Click="btnGetCogDistance_Click"/>
        </Grid>
    </Grid>
    
</UserControl>
