<Window x:Class="DOOR_TRIM_INSPECTION.Controls.FormControls.MessagePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Controls.FormControls"
        mc:Ignorable="d"
        Title="MessagePopup" Height="450" Width="800">
    <Grid Background="#b3c8cf">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Label Name="lbTitle" Margin="10" FontSize="24" VerticalAlignment="Center" >Title</Label>
        <TextBlock HorizontalAlignment="Center" FontSize="18" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Background="White" Height="187" Width="780"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnOk" Margin="5" Height="60" FontSize="18" Grid.Column="1" Content="{DynamicResource TXT_OK}"></Button>
            <Button x:Name="btnCancle" Margin="5" Height="60" FontSize="18" Grid.Column="2" Content="{DynamicResource TXT_CANCEL}" ></Button>
        </Grid>
    </Grid>
</Window>
