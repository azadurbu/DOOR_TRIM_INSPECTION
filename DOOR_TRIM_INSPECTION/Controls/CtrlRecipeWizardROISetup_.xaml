<UserControl x:Class="DOOR_TRIM_INSPECTION.Controls.CtrlRecipeWizardROISetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Controls"
             xmlns:cls="clr-namespace:DOOR_TRIM_INSPECTION.Class"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" IsVisibleChanged="UserControl_IsVisibleChanged" Initialized="UserControl_Initialized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.30*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid Name="rear_view">
            <ScrollViewer Name="sv_r" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                <cls:ZoomBorder x:Name="zoomBorder" ClipToBounds="True" Background="Gray">
                    <Canvas Name="DrawingCanvas" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Image Name="imgDoorTrim" Margin="0 0 0 0" />
                    </Canvas>
                </cls:ZoomBorder>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Name="btnAdd" Margin="5 5 0 5" FontSize="18" FontWeight="Bold" Background="#B3C8CF" Content="{DynamicResource TXT_ADD}" HorizontalAlignment="Right" Width="150" Click="BtnAdd_Click"/>
            <DataGrid Grid.Row="1" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Name="dgROIs"
                    CanUserAddRows="False" SelectionMode="Single"
                    AutoGenerateColumns="False" IsReadOnly="True"
                    SelectionChanged="RoiDataGrid_SelectionChanged"
                      VerticalScrollBarVisibility="Auto"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource TXT_ROI_NAME}" Binding="{Binding roi_name}" Width=".25*"/>
                    <DataGridTextColumn Header="{DynamicResource TXT_DETECTION_CLASS}" Binding="{Binding DetectionClassName}" Width=".20*" />
                    <DataGridTextColumn Header="{DynamicResource TXT_GROUP}" Binding="{Binding group_name}" Width=".20*" />
                    <DataGridTemplateColumn Header="{DynamicResource TXT_ACTIONS}" Width=".28*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Name="btnEdit" Width="50" Content="{DynamicResource TXT_EDIT}" CommandParameter="{Binding}" Margin="0" Click="BtnEdit_Click" />
                                    <Button Name="btnDelete" Width="50" Content="{DynamicResource TXT_DELETE}" CommandParameter="{Binding}" Margin="5 0"  Click="BtnDelete_Click" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width=".05*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".5*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Name="btnRemoveGroup" Margin="5 5 0 5" FontSize="18" FontWeight="Bold" Background="#B3C8CF" Content="Remove Group" HorizontalAlignment="Right" Width="150" Click="BtnRemoveGroup_Click" IsEnabled="False"/>
                <Button Grid.Column="1" Name="btnCreateGroup" Margin="5 5 0 5" FontSize="18" FontWeight="Bold" Background="#B3C8CF" Content="{DynamicResource TXT_CREATE_GROUP}" HorizontalAlignment="Right" Width="150" Click="BtnCreateGroup_Click" IsEnabled="False"/>
            </Grid>
            <StackPanel Grid.Row="3" Orientation="Vertical" Visibility="Hidden" Name="stkPanelAddGroup">
                <Grid MaxHeight="40" Height="40" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width=".5*"/>
                    </Grid.ColumnDefinitions>
                    <Label FontWeight="Bold" Grid.Column="0" Margin="5" Content="{DynamicResource TXT_ALC_CODE}"></Label>
                    <ComboBox Name="cboALCCode" Grid.Column="1" Margin="5" Height="Auto" SelectionChanged="CboALCCode_SelectionChanged"></ComboBox>
                </Grid>
                <Grid MaxHeight="40" Height="40" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width=".5*"/>
                    </Grid.ColumnDefinitions>
                    <Label FontWeight="Bold" Grid.Column="0" Margin="5" Content="{DynamicResource TXT_ALC_NAME}"></Label>
                    <TextBox Name="txtALCName" Grid.Column="1" Margin="5" Text=""></TextBox>
                </Grid>
                <Grid MaxHeight="40" Height="40" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width=".5*"/>
                    </Grid.ColumnDefinitions>
                    <Label FontWeight="Bold" Grid.Column="0" Margin="5" Content="{DynamicResource TXT_GROUP_NAME}"></Label>
                    <TextBox Name="txtGroupName" Grid.Column="1" Margin="5" Text=""></TextBox>
                </Grid>
                <Grid MaxHeight="40" Height="40" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width=".5*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1" Name="btnAddGroup" Margin="5 5 0 5" FontSize="18" FontWeight="Bold" Background="#B3C8CF" Content="{DynamicResource TXT_SAVE}" HorizontalAlignment="Right" Width="150" Click="BtnAddGroup_Click"/>
                </Grid>
            </StackPanel>
            <!-- Popup to enter group name -->
            <!--Popup Name="GroupNamePopup" IsOpen="False" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" Height="200">
                <Border Background="White" BorderBrush="Black" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Enter Group Name" Margin="5"/>
                        <TextBox Name="txtGroupName" Margin="5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Save" Click="SaveGroupName_Click" Margin="5"/>
                            <Button Content="Cancel" Click="CancelGroupName_Click" Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Border-->
            
        </Grid>
    </Grid>
</UserControl>
