<Window x:Class="DOOR_TRIM_INSPECTION.Controls.CustomROIImgPickerBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Controls"
        mc:Ignorable="d"
        Title="{DynamicResource TXT_SELECT_IMAGE}" Height="685" Width="800" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <Grid x:Name="CropImage">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".20*"/>
                    <ColumnDefinition Width=".20*"/>
                    <ColumnDefinition Width=".20*"/>
                    <ColumnDefinition Width=".20*"/>
                    <ColumnDefinition Width=".20*"/>
                </Grid.ColumnDefinitions>
                <Button Name="btnSelectImage" Grid.Column="4" Margin="5" Content="{StaticResource TXT_SELECT_IMAGE}" Click="BtnSelectImage_Click"></Button>
            </Grid>
            <Grid VerticalAlignment="Stretch" Grid.Row="1">
                <local:ROIImageViewer x:Name="roiImageViewer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></local:ROIImageViewer>
            </Grid>
            <Grid MaxHeight="40" Height="40" VerticalAlignment="Center" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".20*"/>
                    <ColumnDefinition Width=".20*"/>
                    <ColumnDefinition Width=".20*"/>
                    <ColumnDefinition Width=".20*"/>
                    <ColumnDefinition Width=".20*"/>
                </Grid.ColumnDefinitions>
                <Button Name="btnPickROICropImg" Grid.Column="4" Margin="5" Content="{StaticResource TXT_ROI_CROP_IMG}" Click="btnPickROICropImg_Click"></Button>
            </Grid>
        </Grid>
        <Grid Background="Beige" x:Name="DrawOnImage" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5">
                <Button Name="btnSave" Content="Save" Width="40" Height="30" Margin="5,0" Click="btnSave_Click"/>
                <Button Name="btnUndo" Content="Undo" Width="40" Height="30" Margin="5,0" Click="btnUndo_Click"/>

                <!-- Brush Color Buttons (Black and White) -->
                <TextBlock Text="Brush: " FontSize="23" FontWeight="Bold" Margin="50 0 0 0"/>
                <Button Name="EraseButton" Content="Erase" Width="40" Height="30" Margin="5,0" Click="EraseButton_Click"/>
                <Button Name="CircleButton" Content="Circle" Width="40" Height="30" Margin="5,0" Click="CircleButton_Click"/>
                <Button Name="btnBlackBrush" Content="Black" Width="40" Height="30" Margin="5,0" Click="btnBlackBrush_Click"/>
                <!---->
                <Button Name="btnWhiteBrush" Content="White" Width="40" Height="30" Margin="5,0" Click="btnWhiteBrush_Click"/>
                <!---->

                <!-- Brush Size Slider -->
                <TextBlock Text="Size:" VerticalAlignment="Center" Margin="10"/>
                <Slider Name="brushSizeSlider" Minimum="1" Maximum="10" Value="5" Width="100" VerticalAlignment="Center" ValueChanged="brushSizeSlider_ValueChanged"/>

            </StackPanel>
            <Grid Grid.Row="1">
                <!--<Canvas Name="canvasImage" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" />-->
                <Image Name="canvasImage" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                <Canvas Name="canvas" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" />
            </Grid>
        </Grid>
    </Grid>
    
</Window>
