<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Resources">
    <!-- BUTTONS -->
    <Style x:Key="BaseBlueButton" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="40" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Background" Value="#89A8B2" />
    </Style>
    <Style x:Key="RecipeControlButtonExit" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseBlueButton}">
        <Setter Property="Margin" Value="5 0 0 0"/>
        <Setter Property="Width" Value="150" />
        <Setter Property="MaxWidth" Value="150" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Background" Value="Crimson" />
    </Style>
    <Style x:Key="RecipeControlButtonLeft" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseBlueButton}">
        <Setter Property="Margin" Value="5 0 0 0"/>
        <Setter Property="Width" Value="150" />
        <Setter Property="MaxWidth" Value="150" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>
    <Style x:Key="RecipeControlButtonRight" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseBlueButton}">
        <Setter Property="Margin" Value="0 0 5 0"/>
        <Setter Property="Width" Value="150" />
        <Setter Property="MaxWidth" Value="150" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>
    <Style x:Key="ButtonS" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="30" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style x:Key="RecipeControlButtonS" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonS}">
        <Setter Property="Margin" Value="5 0 5 0" />
    </Style>
    <Style x:Key="RecipeControlLookUp" TargetType="{x:Type ComboBox}">
        <Setter Property="Width" Value="250" />
    </Style>
    <!-- BORDERS -->
    <Style x:Key="SettingsPageImageBorder" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="#538392" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>
    
    <!-- RADIO BUTTON -->
    <Style x:Key="SettingsPageRadioButton" TargetType="{x:Type RadioButton}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="5 0 5 0" />
    </Style>
    
    <!-- LABEL -->
    <Style x:Key="SettingPageTitle" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    
    
    <!-- RECIPE WIZARD -->
    <Style x:Key="WizardStatusButton" TargetType="{x:Type Grid}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style x:Key="PastStateButton" TargetType="{x:Type Grid}" BasedOn="{StaticResource WizardStatusButton}">
        <Setter Property="Background" Value="#E5E1DA" />
    </Style>

    <Style x:Key="CurrentStateButton" TargetType="{x:Type Grid}" BasedOn="{StaticResource WizardStatusButton}">
        <Setter Property="Background" Value="#538392" />
    </Style>

    <Style x:Key="FutureStateButton" TargetType="{x:Type Grid}" BasedOn="{StaticResource WizardStatusButton}">
        <Setter Property="Background" Value="#F1F0E8" />
    </Style>

    <Style x:Key="StatusButtonIcon" TargetType="{x:Type Image}">
        <Setter Property="Height" Value="32" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="30 0 10 0" />
    </Style>
    <Style x:Key="StatusButtonText" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--RECIPE WIZARD FORM CONTROLS-->
    <Style x:Key="FormLabel" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="5" />
    </Style>
    <Style x:Key="FormLabelLeftMargin" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="50 5 5 5" />
    </Style>

    <Style x:Key="FormCheckBox" TargetType="{x:Type CheckBox}">
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="5 5 0 5" />
    </Style>
    
    <Style x:Key="FormTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="5 5 0 5" />
    </Style>
    
    <Style x:Key="FormComboBox" TargetType="{x:Type ComboBox}">
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Margin" Value="5 5 0 5" />
    </Style>

    <Style x:Key="SettingsGridItem" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="#538392" />
        <Setter Property="Margin" Value="5 5 5 5" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="3" />
    </Style>

    <Style x:Key="SettingsGridStackPanel" TargetType="{x:Type StackPanel}">
        <Setter Property="Margin" Value="5" />
    </Style>
    
    <Style x:Key="SettingsGridItemTitle" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
    </Style>
    <Style x:Key="SettingsGridItemTitleRed" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="Crimson" />
    </Style>
    <Style x:Key="SettingsSaveButton" TargetType="{x:Type Button}">
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Width" Value="200" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Background" Value="#B3C8CF" />
    </Style>

    <Style x:Key="SettingFolderSelectButton" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="5 5 0 5" />
        <Setter Property="Height" Value="30" />
    </Style>
    <!-- COLUMNS -->
    <!--<Style x:Key="c50" TargetType="{x:Type ColumnDefinition}">
        <Setter Property="Width" Value="0.5*" />
    </Style>
    <Style x:Key="c30" TargetType="{x:Type ColumnDefinition}">
        <Setter Property="Width" Value="0.3*" />
    </Style>-->

    <Style x:Key="HistoryFilterButton" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="0 0 3 0" />
        <Setter Property="Height" Value="25" />
    </Style>

    <Style x:Key="HistoryPageRadioButton" TargetType="{x:Type RadioButton}">
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0 0 0 0" />
        <Setter Property="Height" Value="25"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="HistoryPageLabel" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0 0 0 0" />
        <Setter Property="Height" Value="25"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>


    <Style x:Key="HistoryPageCheckBox" TargetType="{x:Type CheckBox}">
        <Setter Property="Margin" Value="0 0 0 0" />
        <Setter Property="Height" Value="25"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <!--INSPECTION SUMMARY CONTROL-->
    <Style x:Key="InspectionSummaryTitle" TargetType="{x:Type Label}">
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style x:Key="InspectionSummaryItemLabel" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0" />
        <Setter Property="FontWeight" Value="ExtraBlack" />
        <Setter Property="Background" Value="#B3C8CF" />
        <Setter Property="Margin" Value="2 0 0 2" />
    </Style>
    <Style x:Key="InspectionSummaryItemValue" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0" />
        <Setter Property="FontWeight" Value="Heavy" />
        <Setter Property="Background" Value="#B3C8CF" />
        <Setter Property="Margin" Value="0 0 2 2" />
    </Style>
    <Style x:Key="InspectionSummaryItemLabelAlt" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0" />
        <Setter Property="FontWeight" Value="ExtraBlack" />
        <Setter Property="Margin" Value="2 0 0 2" />
        <Setter Property="Background" Value="#538392" />
    </Style>
    <Style x:Key="InspectionSummaryItemValueAlt" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0" />
        <Setter Property="FontWeight" Value="Heavy" />
        <Setter Property="Margin" Value="0 0 2 2" />
        <Setter Property="Background" Value="#538392" />
    </Style>
    
    <!--TRIAL IMAGE CONTROL-->
    <Style x:Key="TrialImageListTitle" TargetType="{x:Type Label}">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0" />
    </Style>
</ResourceDictionary>