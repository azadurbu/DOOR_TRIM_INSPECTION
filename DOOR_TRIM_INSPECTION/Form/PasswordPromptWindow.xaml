<Window x:Class="DOOR_TRIM_INSPECTION.Form.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Form"
        mc:Ignorable="d"
       Title="Password Required" Height="200" Width="300" WindowStartupLocation="CenterScreen" >
    <Grid Loaded="Grid_Loaded">
        <Label Content="Please Provide Password" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="0,20,0,0"></Label>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,0,0,0" FontSize="20" KeyDown="PasswordBox_KeyDown"/>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Height="40" Margin="0,0,0,20" Click="OnOkButtonClick" Background="Crimson" FontWeight="Bold" Foreground="WhiteSmoke"/>
    </Grid>
</Window>
