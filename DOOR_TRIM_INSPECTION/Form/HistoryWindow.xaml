<Window x:Class="DOOR_TRIM_INSPECTION.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION"
        xmlns:Controls="clr-namespace:DOOR_TRIM_INSPECTION.Controls"
        mc:Ignorable="d"
        Title="" Height="1024" Width="1920"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#E5E1DA" WindowStyle="ThreeDBorderWindow" Padding="0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" CornerRadius="0 0 7 7" Margin="0 0 0 0" Background="#538392" >
            <Grid Margin="0 0 5 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="0.7*" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Image Name="imgLogo" Source="../images/logo-white-kr.png" Height="45" VerticalAlignment="Center" Margin="10 0 20 0"></Image>
                    <TextBlock Name="txtApplicationName" FontWeight="ExtraBold" FontSize="28" Text="{DynamicResource TXT_APPLICATION_NAME}" VerticalAlignment="Center" Margin="7 7 7 7"></TextBlock>
                </StackPanel>

            </Grid>
        </Border>
        <Border Grid.Row="1" CornerRadius="7 7 7 7" Margin="7 7 7 7" Background="#F1F0E8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.28*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.2*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".25*"/>
                        <ColumnDefinition Width=".02*"/>
                        <ColumnDefinition Width=".30*"/>
                        <ColumnDefinition Width=".02*"/>
                        <ColumnDefinition Width=".15*"/>
                        <ColumnDefinition Width=".02*"/>
                        <ColumnDefinition Width=".0*"/>
                        <ColumnDefinition Width=".1*"/>
                        <ColumnDefinition Width=".05*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".2*"/>
                            <ColumnDefinition Width=".4*"/>
                            <ColumnDefinition Width=".4*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".5*"/>
                            <RowDefinition Height=".5*"/>
                        </Grid.RowDefinitions>
                        <Label FontSize="14" FontWeight="Bold"  Content="{DynamicResource TXT_HISTORY_DATE_RANGE}" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" VerticalAlignment="Center"></Label>
                        <Grid MaxHeight="30" Height="30" Grid.Row="0" Grid.Column="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".4*"/>
                                <ColumnDefinition Width=".6*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="{DynamicResource TXT_HISTORY_FROM}" Style="{StaticResource HistoryPageLabel}"></Label>
                            <DatePicker Name="dtpFrom" HorizontalAlignment="Left" VerticalAlignment="Center" SelectedDate="{Binding SelectedDateTime}" Grid.Column="1">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="IsReadOnly" Value="True"/>
                                        <Setter Property="Text" Value="{Binding SelectedDateTime, StringFormat='{}{0:yy/MM/dd}'}"/>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </Grid>
                        <Grid MaxHeight="30" Height="30" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".4*"/>
                                <ColumnDefinition Width=".6*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="{DynamicResource TXT_HISTORY_TO}" Style="{StaticResource HistoryPageLabel}"></Label>
                            <DatePicker Name="dtpTo" HorizontalAlignment="Left" VerticalAlignment="Center" SelectedDate="{Binding SelectedDateTime}" Grid.Column="1">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="IsReadOnly" Value="True"/>
                                        <Setter Property="Text" Value="{Binding SelectedDateTime, StringFormat='{}{0:yy/MM/dd}'}"/>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </Grid>
                        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="85 0 0 0">
                            <Button Name="btn3Days" Content="{DynamicResource TXT_HISTORY_3_DAYS}" Style="{StaticResource HistoryFilterButton}" Height="20" Click="Btn3Days_Click" ></Button>
                            <Button Name="btn7Days" Content="{DynamicResource TXT_HISTORY_7_DAYS}" Style="{StaticResource HistoryFilterButton}" Height="20" Click="Btn7Days_Click" ></Button>
                            <Button Name="btn15Days" Content="{DynamicResource TXT_HISTORY_15_DAYS}" Style="{StaticResource HistoryFilterButton}" Height="20" Click="Btn15Days_Click" ></Button>
                            <Button Name="btn30Days" Content="{DynamicResource TXT_HISTORY_30_DAYS}" Style="{StaticResource HistoryFilterButton}" Height="20" Click="Btn30Days_Click" ></Button>
                            <Button Name="btn90Days" Content="{DynamicResource TXT_HISTORY_90_DAYS}" Style="{StaticResource HistoryFilterButton}" Height="20" Click="Btn90Days_Click"></Button>
                            <Button Name="btn180Days" Content="{DynamicResource TXT_HISTORY_180_DAYS}" Style="{StaticResource HistoryFilterButton}" Height="20" Click="Btn180Days_Click" ></Button>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".15*"/>
                            <ColumnDefinition Width=".5*"/>
                            <ColumnDefinition Width=".9*"/>
                        </Grid.ColumnDefinitions>
                        <Label FontSize="14" FontWeight="Bold" Content="{DynamicResource TXT_HISTORY_FILTERS}"  Grid.Column="0"  VerticalAlignment="Center"></Label>
                        <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center">
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".2*"/>
                                    <ColumnDefinition Width=".2*"/>
                                    <ColumnDefinition Width=".2*"/>
                                    <ColumnDefinition Width=".2*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="{DynamicResource TXT_HISTORY_INSP_RESULT}" Style="{StaticResource HistoryPageLabel}"></Label>
                                <RadioButton Name="rdoAllResult" Content="{DynamicResource TXT_HISTORY_ALL}" Grid.Column="1" Style="{StaticResource HistoryPageRadioButton}" IsChecked="True" />
                                <RadioButton Name="rdoOKResult" Content="{DynamicResource TXT_HISTORY_OK}" Grid.Column="2" Style="{StaticResource HistoryPageRadioButton}" />
                                <RadioButton Name="rdoNGResult" Content="{DynamicResource TXT_HISTORY_NG}" Grid.Column="3" Style="{StaticResource HistoryPageRadioButton}" />
                            </Grid>
                            <Grid VerticalAlignment="Center" Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".4*"/>
                                    <ColumnDefinition Width=".2*"/>
                                    <ColumnDefinition Width=".2*"/>
                                    <ColumnDefinition Width=".2*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="{DynamicResource TXT_HISTORY_SHIFT}" Style="{StaticResource HistoryPageLabel}"></Label>
                                <RadioButton Name="rdoAllShift" Content="{DynamicResource TXT_HISTORY_ALL}" Grid.Column="1" Style="{StaticResource HistoryPageRadioButton}" IsChecked="True" />
                                <RadioButton Name="rdoFirstShift" Content="{DynamicResource TXT_HISTORY_1ST}" Grid.Column="2" Style="{StaticResource HistoryPageRadioButton}" />
                                <RadioButton Name="rdoSecondShift" Content="{DynamicResource TXT_HISTORY_2ND}" Grid.Column="3" Style="{StaticResource HistoryPageRadioButton}" />
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="3" VerticalAlignment="Center" >
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".2*"/>
                                    <ColumnDefinition Width=".2*"/>
                                    <ColumnDefinition Width=".2*"/>
                                    <ColumnDefinition Width=".2*"/>
                                    <ColumnDefinition Width=".2*"/>
                                    <ColumnDefinition Width=".2*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="도어타입" Style="{StaticResource HistoryPageLabel}"></Label>
                                <RadioButton Name="rdoAllDoorType" Content="{DynamicResource TXT_HISTORY_ALL}" Grid.Column="1" Style="{StaticResource HistoryPageRadioButton}" IsChecked="True" />
                                <RadioButton Name="rdoAllDoorTypeFL" Content="FRT LH" Grid.Column="2" Style="{StaticResource HistoryPageRadioButton}" IsChecked="False" />
                                <RadioButton Name="rdoAllDoorTypeFR" Content="FRT RH" Grid.Column="3" Style="{StaticResource HistoryPageRadioButton}" IsChecked="False" />
                                <RadioButton Name="rdoAllDoorTypeRL" Content="RR LH" Grid.Column="4" Style="{StaticResource HistoryPageRadioButton}" IsChecked="False" />
                                <RadioButton Name="rdoAllDoorTypeRR" Content="RR RH" Grid.Column="5" Style="{StaticResource HistoryPageRadioButton}" IsChecked="False" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="4" Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".5*"/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>
                        <Label Name="lblDoorTrimID" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Margin="5" Content="{StaticResource TXT_DOOR_TRIM_ID}"></Label>
                        <TextBox Name="txtDoorTrimID" Grid.Column="1" Grid.Row="1" Margin="10" Text=""></TextBox>

                    </Grid>
                    <Grid Grid.Column="6" Visibility="Hidden">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".2*"/>
                            <ColumnDefinition Width=".4*"/>
                            <ColumnDefinition Width=".4*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="{DynamicResource TXT_HISTORY_SHOW}" Style="{StaticResource HistoryPageLabel}" ></Label>
                        <RadioButton Name="rdoResult" Content="{DynamicResource TXT_HISTORY_INSP_RESULT}" Grid.Column="1" Style="{StaticResource HistoryPageRadioButton}" IsChecked="True" />
                        <RadioButton Name="rdoChart" Content="{DynamicResource TXT_HISTORY_CHART}" Grid.Column="2" Style="{StaticResource HistoryPageRadioButton}" />
                    </Grid>

                    <Grid Grid.Column="7">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".5*"/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="검색 결과 수:" Style="{StaticResource HistoryPageLabel}"/>
                        <Label Grid.Column="1" Name="LblSearchResultCount"  Style="{StaticResource HistoryPageLabel}"/>
                    </Grid>

                    <Grid Grid.Column="8">
                        <Button Name="btnSearch" Grid.Column="1" Margin="2 2 2 2" FontSize="18" FontWeight="Bold" Background="#B3C8CF"  Content="{DynamicResource TXT_HISTORY_SEARCH}" Click="BtnSearch_Click" ></Button>
                    </Grid>
                </Grid>
                
                    <DataGrid Grid.Row="1" Grid.Column="0" Name="dgvSearchResult" IsReadOnly="True" Margin="2 2 2 2" AutoGenerateColumns="False" CanUserAddRows="False" SelectionChanged="DgvSearchResult_SelectionChanged" SelectionMode="Single" >
                        <DataGrid.Columns>
                        <DataGridTextColumn Header="Inspection Time" Binding="{Binding InspectionTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Foreground="Black" Width=".4*"  />
                            <DataGridTextColumn Header="Door Trim ID" Binding="{Binding DoorTrimID}" Foreground="Black" Width=".4*"/>
                            <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width=".2*"/>
                        </DataGrid.Columns>
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="폴더 열기" Click="OpenFolderMenuItem_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>



                <Border Grid.Row="1" Grid.Column="1">
                <Controls:HistoryImageViewer x:Name="ctrlImageView" >
                    
                </Controls:HistoryImageViewer>
                </Border>

                <Grid Grid.Row="1" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.4*" />
                        <RowDefinition Height="0.6*" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="70" />
                    </Grid.RowDefinitions>
                    <Border Margin="5 0 0 0" Background="#B3C8CF" BorderThickness="0 3 0 0" BorderBrush="#538392" Grid.Row="0" VerticalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label FontSize="16" FontWeight="Bold" Content="{DynamicResource TXT_ALC_INSPECTION_RESULT}" Grid.Row="0"></Label>

                            <DataGrid Name="gvAlcInspResult" IsReadOnly="True" Margin="2 2 2 5" AutoGenerateColumns="False" CanUserAddRows="False" Grid.Row="1">
                                <!--DataGrid.Style>
                                <Style TargetType="DataGrid">
                                    <Setter Property="Background" Value="#538392"/>
                                    <Setter Property="GridLinesVisibility" Value="All"/>
                                    <Setter Property="RowHeight" Value="30"/>
                                </Style>
                            </>
                            <DataGrid.ColumnHeaderStyle>
                                    
                            </DataGrid.ColumnHeaderStyle-->
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Item" Binding="{Binding Name}" Foreground="Black" Width=".33*" />
                                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Foreground="Black" Width=".33*"/>
                                    <DataGridTextColumn Header="Result" Binding="{Binding InspResult}" Width=".33*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                    </Border>
                    <Border Margin="5 5 0 5" Background="#B3C8CF" BorderThickness="0 0 0 3" BorderBrush="#538392" Grid.Row="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label FontSize="16" FontWeight="Bold" Content="{DynamicResource TXT_NG_ITEMS}" Grid.Row="0"></Label>
                            <DataGrid  Name="gvNgInspResult" IsReadOnly="True" Margin="2 2 2 5" AutoGenerateColumns="False" CanUserAddRows="False" Grid.Row="1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Item" Binding="{Binding Name}" Foreground="Black" Width=".5*" />
                                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Foreground="Black" Width=".5*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                    <Button Name="btnGetImageLevel" Margin="5 0 0 5" FontSize="32" FontWeight="ExtraBold" Background="#FFB3C8CF" Grid.Row="2" Content="밝기 확인" BorderBrush="#F1F0E8"  BorderThickness="0" Click="btnGetImageLevel_Click" Visibility="Visible"></Button>
                    <Button Name="btnRunInspection" Margin="5 0 0 5" FontSize="32" FontWeight="ExtraBold" Background="#538392" Grid.Row="3" Content="{DynamicResource TXT_INSPECT}" BorderBrush="#F1F0E8"  BorderThickness="0" Click="BtnRunInspection_Click" Visibility="Visible"></Button>

                </Grid>

            </Grid>
        </Border>
        <Border Grid.Row="2" CornerRadius="15 15 0 0" Margin="0 0 0 0" Background="#B3C8CF" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="0" Margin="10 0 0 0">
                <Image Source="../images/Hanmech_Icon.png" Height="20" VerticalAlignment="Center" Margin="0 0 0 0"></Image>
                <TextBlock VerticalAlignment="Center" FontSize="12" FontWeight="Bold">&#169; Hanmech Co. Ltd.</TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
