<Window x:Class="DOOR_TRIM_INSPECTION.Form.MasterTestResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Form"
        xmlns:Controls="clr-namespace:DOOR_TRIM_INSPECTION.Controls"
        mc:Ignorable="d"
        Title="Master Test Result" Height="1040" Width="1920" 
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Controls:HistoryImageViewer x:Name="ctrlImageViewer" Grid.Row="0" Visibility="Visible" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></Controls:HistoryImageViewer>
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Label Name="lblTestTime" Height="70" Margin="0 0 0 7" FontSize="30" FontWeight="ExtraBold" Background="DarkGray" VerticalContentAlignment="Center" Content="Rear Right NG" BorderBrush="SeaGreen"  BorderThickness="0" HorizontalContentAlignment="Center"></Label>
            <Label Name="lblFLOK" Height="70" Margin="0 0 0 7" FontSize="30" FontWeight="ExtraBold" Background="WhiteSmoke" VerticalContentAlignment="Center" Content="Front Left OK" BorderBrush="SeaGreen"  BorderThickness="0" HorizontalContentAlignment="Center"  MouseDown="LblInspectionResult_MouseDown"></Label>
            <Label Name="lblFLNG" Height="70" Margin="0 0 0 7" FontSize="30" FontWeight="ExtraBold" Background="WhiteSmoke" VerticalContentAlignment="Center" Content="Front Left NG" BorderBrush="SeaGreen"  BorderThickness="0" HorizontalContentAlignment="Center"  MouseDown="LblInspectionResult_MouseDown" ></Label>
            <Label Name="lblFROK" Height="70" Margin="0 0 0 7" FontSize="30" FontWeight="ExtraBold" Background="WhiteSmoke" VerticalContentAlignment="Center" Content="Front Right OK" BorderBrush="SeaGreen"  BorderThickness="0" HorizontalContentAlignment="Center" MouseDown="LblInspectionResult_MouseDown" ></Label>
            <Label Name="lblFRNG" Height="70" Margin="0 0 0 7" FontSize="30" FontWeight="ExtraBold" Background="WhiteSmoke" VerticalContentAlignment="Center" Content="Front Right NG" BorderBrush="SeaGreen"  BorderThickness="0" HorizontalContentAlignment="Center" MouseDown="LblInspectionResult_MouseDown" ></Label>
            <Label Name="lblRLOK" Height="70" Margin="0 0 0 7" FontSize="30" FontWeight="ExtraBold" Background="WhiteSmoke" VerticalContentAlignment="Center" Content="Rear Left OK"   BorderBrush="SeaGreen"  BorderThickness="0" HorizontalContentAlignment="Center" MouseDown="LblInspectionResult_MouseDown" ></Label>
            <Label Name="lblRLNG" Height="70" Margin="0 0 0 7" FontSize="30" FontWeight="ExtraBold" Background="WhiteSmoke" VerticalContentAlignment="Center" Content="Rear Left NG"   BorderBrush="SeaGreen"  BorderThickness="0" HorizontalContentAlignment="Center" MouseDown="LblInspectionResult_MouseDown" ></Label>
            <Label Name="lblRROK" Height="70" Margin="0 0 0 7" FontSize="30" FontWeight="ExtraBold" Background="WhiteSmoke" VerticalContentAlignment="Center" Content="Rear Right OK" BorderBrush="SeaGreen"  BorderThickness="0" HorizontalContentAlignment="Center"  MouseDown="LblInspectionResult_MouseDown" ></Label>
            <Label Name="lblRRNG" Height="70" Margin="0 0 0 7" FontSize="30" FontWeight="ExtraBold" Background="WhiteSmoke" VerticalContentAlignment="Center" Content="Rear Right NG" BorderBrush="SeaGreen"  BorderThickness="0" HorizontalContentAlignment="Center"  MouseDown="LblInspectionResult_MouseDown" ></Label>
        </StackPanel>
    </Grid>
</Window>
