<Window x:Class="DOOR_TRIM_INSPECTION.WinInWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION"
        mc:Ignorable="d"
        Title="WinInWin" Height="450" Width="800">
    <Grid>
        <!-- Main content of the main window -->
        <Button Content="Open Floating Panel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Click="OpenFloatingPanel"/>

        <!-- Floating Panel (initially hidden) -->
        <Window x:Name="FloatingPanel"
                Title="Floating Panel"
                Width="300" Height="200"
                WindowStyle="None"
                Topmost="True"
                AllowsTransparency="True"
                Background="LightGray"
                ShowInTaskbar="False"
                Left="400" Top="100">
            <Grid>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">
                    Floating Panel Content
                </TextBlock>
            </Grid>
        </Window>
    </Grid>
</Window>
