<Window x:Class="DOOR_TRIM_INSPECTION.Form.PopUpROISetupTryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOOR_TRIM_INSPECTION.Form"
        xmlns:Progressbar="clr-namespace:DOOR_TRIM_INSPECTION.Controls.FormControls"
        mc:Ignorable="d"
        Title="PopUpROISetupTryWindow" Height="800" Width="1200" WindowState="Maximized" ContentRendered="Window_ContentRendered" Background="#538392" Closing="Window_Closing">
    <Grid>
        <Grid Name="BackgroundGrid" Margin="5"  MouseMove="Grid_MouseMove">
            <Grid.RowDefinitions>
                <RowDefinition Height="3"/>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Grid.Column="6" Margin="5" Background="#F1F0E8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="65"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical" Name="stkParameters" Margin="2" Grid.Row="0"/>
                <StackPanel Orientation="Horizontal" Name="stpButtonContainer" VerticalAlignment="Top" Grid.Row="1">
                    <Button Margin="5 10 0 0" Name="btnTry" Style="{StaticResource RecipeControlButtonS}" Content="{StaticResource TXT_TRY}" Click="BtnTry_Click" FontSize="24" Width="110" Height="50" />
                    <Button Margin="5 10 0 0" Name="btnUpdate" Style="{StaticResource RecipeControlButtonS}" Content="{StaticResource TXT_UPDATE}" Click="BtnUpdate_Click" FontSize="24" Width="110" Height="50" />
                    <Button Margin="5 10 0 0" Name="btnCancel" Style="{StaticResource RecipeControlButtonS}" Content="{StaticResource TXT_CANCEL}" Click="BtnCancel_Click" FontSize="24" Width="110" Height="50"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="6"  Margin="5">
                <Label Name="DrawingCanvasStatus" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

            </Grid>
            <Grid Grid.Row="1" Grid.Column="0" Margin="5" Background="#B3C8CF">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{StaticResource TXT_TRY_MASTER_IMAGE}" FontSize="24" TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1" Margin="5">
                    <Progressbar:Progressbar x:Name="progressBarMaster" />
                    <Image x:Name="imgMaster" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="2" Margin="5">
                    <Image x:Name="imgMasterOutput" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1" Margin="5" Background="#B3C8CF">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="40"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{StaticResource TXT_TRY_IMAGE_1}" FontSize="24" TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1" Margin="5">
                    <Progressbar:Progressbar x:Name="progressBarImgTry1" />
                    <Image x:Name="imgTry1" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="2" Margin="5">
                    <Image x:Name="imgTryOutput1" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2" Margin="5" Background="#B3C8CF">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="40"/>
                    <RowDefinition />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{StaticResource TXT_TRY_IMAGE_2}" FontSize="24" TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1" Margin="5">
                    <Progressbar:Progressbar x:Name="progressBarImgTry2" />
                    <Image x:Name="imgTry2" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="2" Margin="5">
                    <Image x:Name="imgTryOutput2" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="3" Margin="5" Background="#B3C8CF">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="40"/>
                    <RowDefinition />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{StaticResource TXT_TRY_IMAGE_3}" FontSize="24" TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1" Margin="5">
                    <Progressbar:Progressbar x:Name="progressBarImgTry3" />
                    <Image x:Name="imgTry3" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="2" Margin="5">
                    <Image x:Name="imgTryOutput3" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="4" Margin="5" Background="#B3C8CF">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="40"/>
                    <RowDefinition />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{StaticResource TXT_TRY_IMAGE_4}" FontSize="24" TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1" Margin="5">
                    <Progressbar:Progressbar x:Name="progressBarImgTry4" />
                    <Image x:Name="imgTry4" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="2" Margin="5">
                    <Image x:Name="imgTryOutput4" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            <!-- result and output-->
            <Grid Grid.Row="2" Grid.Column="0" Margin="5" Background="#F1F0E8">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="40"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{StaticResource TXT_TRY_RESULT}" FontSize="24" TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Label Name="lblMasterOkNg" Content="" FontSize="24" FontWeight="Bold" Foreground="White" 
                           Margin="5" HorizontalContentAlignment="Center" Height="40"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock Name="txtMasterOutput"  FontSize="14" Text="" Margin="5"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="1" Margin="5" Background="#F1F0E8">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="40"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{StaticResource TXT_TRY_RESULT}" FontSize="24" TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Label Name="lblTryOkNg1" FontSize="24" FontWeight="Bold" Foreground="White" 
                           Margin="5" HorizontalContentAlignment="Center" Height="40"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock Name="txtTryOutput1"  FontSize="14" Text="" Margin="5"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="2" Margin="5" Background="#F1F0E8">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="40"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{StaticResource TXT_TRY_RESULT}" FontSize="24" TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Label Name="lblTryOkNg2" FontSize="24" FontWeight="Bold" Foreground="White" 
                           Margin="5" HorizontalContentAlignment="Center" Height="40"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock Name="txtTryOutput2"  FontSize="14" Text="" Margin="5"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="3" Margin="5" Background="#F1F0E8">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="40"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{StaticResource TXT_TRY_RESULT}" FontSize="24" TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Label Name="lblTryOkNg3" FontSize="24" FontWeight="Bold" Foreground="White" 
                           Margin="5" HorizontalContentAlignment="Center" Height="40"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock Name="txtTryOutput3"  FontSize="14" Text="" Margin="5"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="4" Margin="5" Background="#F1F0E8">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="40"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="{StaticResource TXT_TRY_RESULT}" FontSize="24" TextAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Label Name="lblTryOkNg4" FontSize="24" FontWeight="Bold" Foreground="White" 
                           Margin="5" HorizontalContentAlignment="Center" Height="40"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock Name="txtTryOutput4"  FontSize="14" Text="" Margin="5" />
                </Grid>
            </Grid>


        </Grid>
    </Grid>
</Window>
